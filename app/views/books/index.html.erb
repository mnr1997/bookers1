<div class="index">
  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th><th>Body</th><th></th><th></th><th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="new">
  <h2>New book</h2>

  <% if @book.errors.any? %>
  <div class="error">
    <h5 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h5>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="books">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>

    <div class="books">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
  
    <div class="books">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>



