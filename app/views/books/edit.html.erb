<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error">
  <h5 class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h5>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model: @book do |f| %>
<div class="books">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

<div class="books">
  <h4>Body</h4>
  <%= f.text_area :body %>
</div>

<div class="books">
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", "/books" %>